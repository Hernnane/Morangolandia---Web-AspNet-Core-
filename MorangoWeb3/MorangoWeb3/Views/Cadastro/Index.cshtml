@model UsuariosModel // Definindo o modelo da view para UsuariosModel

@{
    ViewData["Title"] = "Cadastrar"; // Definindo o título da página
}

<div class="container-center">
    @* Contêiner central para alinhar o conteúdo *@
    <div class="card p-4 shadow">
        @* Card com padding e sombra para o formulário *@
        <h2 class="text-center">Crie uma Conta</h2> // Título principal da página
        <form method="post" asp-controller="Cadastro" asp-action="Cadastrar" enctype="multipart/form-data">
            <!-- Formulário com método POST, direcionando para a ação "Cadastrar" no controlador "Cadastro" -->
            <!-- Campo para Nome Completo -->
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome Completo:</label>
                <input type="text" class="form-control" asp-for="Nome" id="Usuario" placeholder="Digite seu nome completo">
                <span asp-validation-for="Nome" class="text-danger"></span> <!-- Exibe mensagem de validação para o campo Nome -->
            </div>

            <!-- Campo para Nome de Usuário -->
            <div class="mb-3">
                <label asp-for="Usuario" class="form-label">Usuário:</label>
                <input type="text" class="form-control" asp-for="Usuario" id="Usuario" placeholder="Digite seu usuário">
                <span asp-validation-for="Usuario" class="text-danger"></span> <!-- Exibe mensagem de validação para o campo Usuário -->
            </div>

            <!-- Campo para Apelido -->
            <div class="mb-3">
                <label asp-for="Apelido" class="form-label">Apelido:</label>
                <input type="text" class="form-control" asp-for="Apelido" id="Apelido" placeholder="Digite como você quer que seu nome apareça no perfil">
            </div>

            <!-- Campo para Idade -->
            <div class="mb-3">
                <label asp-for="Idade" class="form-label">Idade:</label>
                <input type="text" class="form-control" asp-for="Idade" id="Idade" placeholder="Digite sua idade">
                <span asp-validation-for="Idade" class="text-danger"></span> <!-- Exibe mensagem de validação para o campo Idade -->
            </div>

            <!-- Campo para Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email:</label>
                <input type="email" class="form-control" asp-for="Email" id="Email" placeholder="Digite seu email">
                <span asp-validation-for="Email" class="text-danger"></span> <!-- Exibe mensagem de validação para o campo Email -->
            </div>

            <!-- Campo para Senha -->
            <div class="mb-3">
                <label asp-for="Senha" class="form-label">Senha:</label>
                <input type="password" class="form-control" asp-for="Senha" id="Senha" placeholder="Digite sua senha">
                <span asp-validation-for="Senha" class="text-danger"></span> <!-- Exibe mensagem de validação para o campo Senha -->
            </div>

            <!-- Campo para Imagem de Perfil -->
            <div class="mb-3">
                <label for="Imagem">Imagem:</label>
                <input type="file" name="Imagem" class="form-control"> <!-- Permite ao usuário fazer upload de uma imagem -->
            </div>

            <!-- Botão para enviar o formulário -->
            <button type="submit" class="btn btn-primary w-100">Efetuar Cadastro</button>

            <!-- Link para voltar à página de login -->
            <a asp-controller="Login" asp-action="Index" role="button" class="btn btn-info w-100 mt-2">Voltar</a>
        </form>
    </div>
</div>
