<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web___Morangolandia</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Remove espaços laterais */
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            overflow-x: hidden;
        }

        /* Imagens ocupando o espaço inteiro */
        img {
            max-width: 100%;
            height: auto;
            display: block;
        }

        /* Menu centralizado */
        .navbar-nav {
            flex-direction: row;
        }

        /* Estilo dos botões */
        .botao-morangolandia, .botao-perfil {
            text-decoration: none;
            font-weight: 600;
            color: #fff;
            border-radius: 5px;
            padding: 10px 20px;
            text-align: center;
            display: block;
        }

        .botao-morangolandia {
            background-color: #d9534f;
        }

            .botao-morangolandia:hover {
                background-color: #c9302c;
            }

        .botao-perfil {
            background-color: #d4e38c;
        }

            .botao-perfil:hover {
                background-color: #c3d779;
            }

        /* Centralizar botões em telas pequenas */
        .navbar-nav.d-lg-none .nav-item {
            text-align: center;
            padding: 5px 0;
        }

        /* Margem entre os botões no dropdown */
        .dropdown-menu .nav-item {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid px-0">
                <!-- Logo -->
                <a class="navbar-brand ms-2" asp-area="" asp-controller="SimplePages" asp-action="Index">
                    <img src="/img/icons/logo_1.png" alt="Logo" style="max-width: 100px; max-height:100px;" />
                </a>

                <!-- Botão hambúrguer -->
                <button class="navbar-toggler me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu de navegação -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Links centrais em telas grandes -->
                    <ul class="navbar-nav mx-auto d-none d-lg-flex">
                        <li class="nav-item mx-2">
                            <a class="botao-morangolandia" asp-controller="MorangoFeira" asp-action="Index">MorangoFeira</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="botao-morangolandia" asp-controller="MorangoCheff" asp-action="Index">MorangoCheff</a>
                        </li>
                    </ul>

                    <!-- Dropdown para telas grandes -->
                    <ul class="navbar-nav ms-auto d-none d-lg-flex">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle" style="font-size: 1.5rem;"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><a class="botao-perfil dropdown-item text-center" asp-controller="Usuario" asp-action="Index">Meu Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="botao-perfil dropdown-item text-center" asp-controller="Login" asp-action="Logout">Sair</a>
                                    }
                                    else
                                    {
                                        <a class="botao-perfil dropdown-item text-center" asp-controller="Login" asp-action="Index">Entrar</a>
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Menu unificado no dropdown hambúrguer em telas pequenas -->
                    <ul class="navbar-nav d-lg-none w-100">
                        <li class="nav-item">
                            <a class="botao-morangolandia" asp-controller="MorangoFeira" asp-action="Index">MorangoFeira</a>
                        </li>
                        <li class="nav-item">
                            <a class="botao-morangolandia" asp-controller="MorangoCheff" asp-action="Index">MorangoCheff</a>
                        </li>
                        <li class="nav-item">
                            <a class="botao-perfil" asp-controller="Usuario" asp-action="Index">Meu Perfil</a>
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="botao-perfil" asp-controller="Login" asp-action="Logout">Sair</a>
                            }
                            else
                            {
                                <a class="botao-perfil" asp-controller="Login" asp-action="Index">Entrar</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid px-0">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
