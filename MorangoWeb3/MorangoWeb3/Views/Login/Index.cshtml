@model LoginModel // Define o modelo da view como LoginModel

@{
    ViewData["Title"] = "Login"; // Define o título da página como "Login"
}

@if (User.Identity.IsAuthenticated == false) // Verifica se o usuário não está autenticado
{
    Layout = "_LayoutDeslogado"; // Se o usuário não estiver autenticado, utiliza o layout "_LayoutDeslogado"
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title> <!-- Define o título da página -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> <!-- Link para o Bootstrap -->
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%; /* Define altura total da página */
        }

        .container-center {
            display: flex;
            justify-content: center; /* Alinha o conteúdo horizontalmente no centro */
            align-items: center; /* Alinha o conteúdo verticalmente no centro */
            height: 100%; /* Altura total para centralização */
        }

        .card {
            width: 400px; /* Define a largura do card de login */
        }
    </style>
</head>

<body class="fundo-frutas">
    <!-- Define a classe de fundo "fundo-frutas" -->
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card p-4" style="width: 400px;">
            <!-- Card para o formulário de login -->
            <h2 class="text-center">Login</h2> <!-- Título do formulário -->
            <form method="post" asp-controller="Login" asp-action="Logar">
                <!-- Formulário de login com método POST, enviando para a ação "Logar" no controlador "Login" -->
                <!-- Campo para Nome de Usuário -->
                <div class="mb-3">
                    <label for="Usuario" class="form-label">Usuário:</label>
                    <input type="text" class="form-control" asp-for="UsuarioLogin" id="Usuario" placeholder="Digite seu usuário">
                    <span asp-validation-for="UsuarioLogin" class="text-danger"></span> <!-- Exibe mensagem de erro para o campo UsuarioLogin -->
                </div>

                <!-- Campo para Senha -->
                <div class="mb-3">
                    <label for="Senha" class="form-label">Senha:</label>
                    <input type="password" class="form-control" asp-for="SenhaLogin" id="Senha" placeholder="Digite sua senha">
                    <span asp-validation-for="SenhaLogin" class="text-danger"></span> <!-- Exibe mensagem de erro para o campo SenhaLogin -->
                </div>

                <!-- Botão de login -->
                <button type="submit" class="btn btn-primary w-100">Logar</button>

                <!-- Link para a página de cadastro -->
                <a asp-controller="Cadastro" asp-action="Index" role="button" class="btn btn-warning w-100 mt-2">Cadastrar</a>
            </form>
        </div>
    </div>
</body>
